{
  "name": "@fridgefm/your-project",
  "version": "0.0.1",
  "description": "A simple template for a library with built-in ts, jest, eslint, prettier support",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/index.js",
  "license": "MIT",
  "type": "module",
  "keywords": [],
  "scripts": {
    "start": "tsx watch ./src/",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "npm run test:lint && npm run test:types && npm run test:unit",
    "test:lint": "eslint --ext .js,.ts ./src",
    "test:types": "tsc --noEmit",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.15",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3"
  }
}
